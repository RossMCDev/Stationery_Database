@model Stationers.Models.Variant

@{
    ViewBag.Title = "Add Stock";
}

<h2>Add Stock</h2>

    @using (Html.BeginForm("NewVariant", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <hr />
        @Html.HiddenFor(model => Model.Stationary_ID)

        <div class="form-group">
            @Html.LabelFor(model => Model.Colour, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => Model.Colour, new { htmlAttributes = new { @class = "form-control", Value = "", autofocus = "true" } })
            @Html.ValidationMessageFor(model => Model.Colour, "", new { @class = "text-danger" })


        </div>

        <div>
            <div class="form-group">
                <label class="control-label col-md-2"><b>Condition</b></label>
                @Html.EditorFor(model => Model.Status, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => Model.Status, "", new { @class = "text-danger" })


            </div>
            <div class="form-group">
                @Html.LabelFor(model => Model.Stocked, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => Model.Stocked, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => Model.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => Model.Amount, new { htmlAttributes = new { @class = "form-control", min = "1", Value = "1" } })
                @Html.ValidationMessageFor(model => Model.Amount, "", new { @class = "text-danger" })
            </div>

            @if (Model.creationsucess)
        {
            <h2>
                @Html.DisplayFor(model => Model.Colour) Stock Successfully Added
            </h2>
        }
            else if (Model.submit && !Model.creationsucess)
            {
                <h2 class=" text-danger">
                    There was an error with the submission no stock has been added 
                </h2>
            }
            <table class="table"></table>
                    <input type="submit" value="Create" class="btn" />

            <div>
                @Html.ActionLink("Display record", "Display", new { id = Model.Stationary_ID })
                &nbsp; &nbsp;   
             @Html.ActionLink("Edit record", "Edit", new { id = Model.Stationary_ID })
                &nbsp; &nbsp;
                @Html.ActionLink("Back to listing", "Index")            </div>
        </div>  }

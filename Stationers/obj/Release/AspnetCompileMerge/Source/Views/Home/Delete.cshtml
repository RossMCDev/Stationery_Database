<div>
    <h4>Item</h4>
    <hr />
    <dt>
        @Html.DisplayNameFor(model => model.Image)
    </dt>
    <dd>
        <img src="http://localhost:53073/@Html.DisplayFor(model => model.Image)" alt="" class="picturedisplay" />
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Name)
    </dt>
    <dd>

        @Html.DisplayFor(model => model.Name)

    </dd>
    <dt>
        @Html.DisplayNameFor(model => model.Category)
    </dt>
    <dd>

        @Html.DisplayFor(model => model.Category)

    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.Description)
    </dt>
    <dd>

        @Html.DisplayFor(model => model.Description)

    </dd>


    <dt>
        Subject
    </dt>
    <dd>

        @Html.DisplayFor(model => model.ForSubject)

    </dd>



    <dt>
        @Html.DisplayNameFor(model => model.Price)
    </dt>
    @if (Model.Price > 0)
    {

        <dd>

            @Html.DisplayFor(model => model.Price)

        </dd>
    }
    else if (Model.Price == 0)
    {
        <dd>

            Free
        </dd>
    }
    else
    {
        <dd>

            Unknown
        </dd>
    }

    @*@if (Model.Favorite)
    {
        <dd>

            Favored

        </dd>
    }*@

    @foreach (var variant in Model.Variants.OrderBy(x => x.Colour))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => variant.Colour)
            </td>

            <td>


                <i class="fa fa-2x fa-square _@Html.DisplayFor(modelItem => variant.Colour)" style="color: @Html.DisplayFor(modelItem => variant.Colour)"></i>

            </td>

            <td>
                @if (variant.Stocked)
                {
                    <p>
                        Stocked
                    </p>
                }
                else
                {
                    <p>
                        Not Stocked
                    </p>

                }
            </td>
        </tr>

    }



</div>

